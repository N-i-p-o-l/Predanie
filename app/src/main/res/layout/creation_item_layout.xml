<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:divider="@android:color/transparent"
    android:dividerHeight="10.0sp"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:scaleType="fitCenter"
        android:padding="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/creation_image"
        android:src="@mipmap/ic_launcher"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/creation_name"
        android:layout_toRightOf="@+id/creation_image"
        android:layout_toEndOf="@+id/creation_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:text="Хроники Нарнии"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/creation_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_toRightOf="@+id/creation_image"
        android:layout_toEndOf="@+id/creation_image"
        android:layout_below="@+id/creation_name"
        android:text="Люьис Клайв Степлз"
        android:textSize="18sp"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/creation_author"/>

</RelativeLayout>

